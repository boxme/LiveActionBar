<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/listViewActionBarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView ActionBar"/>

    <Button
        android:id="@+id/scrollViewActionBarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView ActionBar"/>

    <Button
        android:id="@+id/scrollViewActionBarWithNavigationDrawerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With Navigation Drawer"/>
</LinearLayout>
